{{#each blogs as |blog| }}
<div class="card w-11/12 bg-neutral shadow-xl my-6 mx-auto">
  <div class="card-body">
    <h2 class="card-title">{{ blog.name }}</h2>
    <p> {{ blog.content }}</p>
    <p><small>Created on: {{{ getDate blog.date_created }}}</small></p>
    <div class="card-actions justify-end">
      <button class="viewBlog btn btn-accent" data-id='{{ blog.id }}'>View Blog</button>
    </div>
  </div>
</div>
{{/each}}
{{!-- include script to handle/listen for view blog buttons --}}

<script src="/js/viewBlogs.js"></script>