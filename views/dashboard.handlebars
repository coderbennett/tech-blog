{{#each blogs as |blog| }}
<div class="card w-11/12 bg-base-100 shadow-xl my-6">
  <div class="card-body">
    <h2 class="card-title">{{ blog.name }}</h2>
    <p>{{ getDate blog.date_created }}</p>
    <div class="card-actions justify-end">
      <button class="viewBlog btn btn-primary" data-id='{{ blog.id }}'>View Blog</button>
    </div>
  </div>
</div>
{{/each}}

<button class="btn">New Post</button>
