<div class="card w-11/12 bg-neutral shadow-xl my-6 mx-auto">
    <div class="card-body">
    <h2 class="card-title">Update Blog Post</h2>
        <h3>Title</h3>
        <input type="text" id="title-blog" placeholder="{{ blog.name }}" class="input input-bordered"/>
        <h3>Content</h3>
        <textarea id="content-blog" type="text" placeholder="{{ blog.content }}" class="textarea textarea-bordered" ></textarea>
        <div class="card-actions justify-end">
            <button id="submit-blog" class="btn btn-primary" type="submit" data-id='{{ blog.id }}'>submit</button>
        </div>
    </div>
</div>

<script src="/js/updateBlogPost.js"></script>