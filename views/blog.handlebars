<div class="card w-9/12 bg-neutral shadow-xl my-6 mx-auto">
  <div class="card-body">
    <h2 class="card-title">{{ blog.name }}</h2>
    <p>{{ blog.content }}</p>
    <p><small>- {{ blog.user.name }} </small></p>
    <p><small>{{{ getDate blog.date_created }}}</small></p>
    {{#if userOwned}}
    <button id="updateBlogBtn" data-id="{{ blog.id }}" class="btn btn-accent">Update Blog</button>
    <button id="deleteBlogBtn" data-id="{{ blog.id }}" class="btn btn-accent">Delete Blog</button>
    {{/if}}
  </div>
  {{!-- create if statement to show update/delete blog IF you are logged in as the user who made this post --}}
</div>

{{#each comments as |comment| }}
<div class="card w-6/12 bg-secondary shadow-xl my-6 mx-auto">
  <div class="card-body">
    <h3 class="card-title"> {{ comment.content }} </h3>
    <p>- {{comment.user.name}}</p>
    <p><small> {{{ getDate comment.date_created }}}</small></p>
  </div>
</div>
{{/each}}

{{#if loggedIn}}

<div class="card w-6/12 bg-neutral shadow-xl my-6 mx-auto flex justify-center"></div>
  <div class="card-body">
    <h2 class="card-title">Want to join the Conversation?</h2>
    <textarea id="commentContent" type="text" placeholder="Comment here" class="textarea textarea-bordered" ></textarea>
    <div class="card-actions justify-end">
      <button id="commentBtn" class="btn btn-primary" data-id="{{ blog.id }}" >Add Comment</button>
    </div>
  </div>
</div>
{{!-- probably include script to handle/listen for add comment button here --}}
<script src="/js/addComment.js"></script>
{{/if}}

{{#if userOwned}}
<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>
{{/if}}
